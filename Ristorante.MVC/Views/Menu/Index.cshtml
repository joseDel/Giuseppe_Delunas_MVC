@model List<MenuViewModel>

<h1>Benvenuto. Ecco la lista dei Menu</h1>

@if (User.IsInRole("Administrator"))
{
    <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Crea nuovo Menu</a>
}

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.IdMenu" class="btn btn-primary">Dettagli</a>
          
                </td>
            </tr>
        }
    </tbody>
</table>